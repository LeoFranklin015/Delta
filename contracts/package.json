{
  "name": "hello_near",
  "version": "1.0.0",
  "license": "(MIT AND Apache-2.0)",
  "type": "module",
  "scripts": {
    "build-oracle": "near-sdk-js build src/oracle/contract.ts build/oracle.wasm",
    "build-consumer": "near-sdk-js build src/consumer/contract.ts build/consumer.wasm",
    "deploy-oracle": "near deploy oracletest.testnet ./build/oracle.wasm",
    "deploy-consumer": "near deploy consumer123.testnet ./build/consumer.wasm",
    "test": "$npm_execpath run build && ava -- ./build/oracle.wasm",
    "init-consumer": "near call oracletest.testnet init '{}' --accountId consumer123.testnet",
    "init-oracle": "near call oracletest.testnet init '{}' --accountId oracletest.testnet",
    "start-chat": "near call consumer123.testnet startChat '{\"message\": \"whats your name\"}' --accountId consumer123.testnet --gas 300000000000000",
    "create-oracle-account": "near create-account oracletest.testnet --useFaucet",
    "create-consumer-account": "near create-account consumer123.testnet --useFaucet",
    "get-messages": "near call consumer123.testnet getMessageHistory '{\"chatId\": 0}' --accountId consumer123.testnet"
  },
  "dependencies": {
    "near-sdk-js": "2.0.0"
  },
  "devDependencies": {
    "ava": "^6.1.3",
    "near-workspaces": "^3.5.0",
    "typescript": "^5.4.5"
  },
  "ava": {
    "files": [
      "sandbox-test/*.ava.js"
    ]
  }
}