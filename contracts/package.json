{
  "name": "hello_near",
  "version": "1.0.0",
  "license": "(MIT AND Apache-2.0)",
  "type": "module",
  "scripts": {
    "build-oracle": "near-sdk-js build src/oracle/contract.ts build/oracle.wasm",
    "build-consumer": "near-sdk-js build src/contract.ts build/consumer.wasm",

    "create-oracle-account": "near create-account oracletest1.testnet --useFaucet",
    "create-consumer-account": "near create-account consumer1234.testnet --useFaucet",

    "deploy-oracle": "near deploy oracletest1.testnet ./build/oracle.wasm",
    "deploy-consumer": "near deploy consumer1234.testnet ./build/consumer.wasm",

    "init-consumer": "near call oracletest1.testnet init '{}' --accountId consumer1234.testnet",
    "init-oracle": "near call oracletest1.testnet init '{}' --accountId oracletest1.testnet",
    
    "start-chat": "near call consumer1234.testnet startChat '{\"message\": \"whats your name\"}' --accountId consumer1234.testnet --gas 300000000000000",
    
    "get-messages": "near call consumer1234.testnet getMessageHistory '{\"chatId\": 92}' --accountId consumer1234.testnet",
    "get-run": "near call consumer1234.testnet getChatRuns '{\"chatId\": 94}' --accountId consumer1234.testnet",    
    "test": "$npm_execpath run build && ava -- ./build/oracle.wasm"
  },
  "dependencies": {
    "near-sdk-js": "2.0.0"
  },
  "devDependencies": {
    "ava": "^6.1.3",
    "near-workspaces": "^3.5.0",
    "typescript": "^5.4.5"
  },
  "ava": {
    "files": [
      "sandbox-test/*.ava.js"
    ]
  }
}